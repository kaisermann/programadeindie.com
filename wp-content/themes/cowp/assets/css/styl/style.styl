@import "import/vars.styl"
@import "import/font.styl"

body
	font-family Verdana, sans-serif
	-webkit-font-smoothing:antialiased;
	-webkit-backface-visibility:hidden;
	font-size 16px
	background-image url(../img/bg.png)
	overflow-x hidden
	
	&::after
		display none
		content 'default'
		@media(max-width:767px)
			content 'mobile'

// Main
a
	transition color .3s ease
	color $cinza-3
	
	&:hover
		color $azul
 
h1
h2
h3
h4
h5
h6
	-webkit-font-smoothing:antialiased;
	-webkit-backface-visibility:hidden;
	font-family 'Josefin Sans'
	color #fff
	font-size 32px
	
.next-page-link
	display none
	

#topbutton
	position fixed
	right 25px
	bottom -50px
	width 50px
	height 50px
	background-image url('../img/topbutton.png')
	background-size 50px 50px
	background-repeat no-repeat
	opacity 0
	visibility hidden
	cursor pointer
	transition all .3s ease
	z-index 1000
	&.active
		visibility visible
		opacity .6
		bottom 25px
	&:hover
		opacity .8
		
	@media(max-width:991px)
		right 0
		width 80px
		height 80px
		background-position 5px 5px
		&.active
			bottom 0
		
.pace
	-webkit-pointer-events none
	pointer-events none
	-webkit-user-select none
	-moz-user-select none
	user-select none


.pace-inactive
	display none

.pace
	.pace-progress
		background #f5f5f5
		position fixed
		z-index 999991
		top 0
		right 100%
		width 100%
		height 2px
				
for i in (0..4)
	.set-grad-{i}
		background linear-gradient(to bottom, rgba($grad1[i],.4) 0%, rgba($grad1[i],.3) 30%, rgba($grad2[i],.3) 100%)
		
for i in (0..4)
	.img-bg-{i}
		background-color rgba($menucolors[i], .2)
	

