footer
	text-transform uppercase
	background-color $cinza-0
	padding-bottom 20px
		
	.credits 
		float right
		
	.copyright 
		float left
	
	.copyright
	.credits
		line-height 140%
		padding 5px 0
		display inline-block
		color $cinza-5
		font-size 14px
		
	@media(max-width: 991px)
		padding 10px 0
		
		.copyright
		.credits
			float none
			display block
			text-align center
		
	nav
		margin-bottom 20px
		
	@media(max-width: 767px)
		nav
			display none