#map-canvas
	height 400px

	a[href^="http://maps.google.com/maps"]
		display:none !important

	.gmnoprint a
	.gmnoprint span
		display none

	.gmnoprint div
		background:none !important;

.infoBox
	> img
		position absolute !important
		right 0px !important
		top 0px !important
		margin 0 !important
		padding 10px
		z-index 9999

.info-wrapper
	display block

	img
		position relative
		z-index 9901
		border-radius 50%
		max-width 100px !important
		height auto
		display inline-block
		vertical-align middle

	&:hover
		.info-container
			background-color $azul

.info-container
	display inline-block
	position relative
	z-index 9900
	width 200px
	height 100px
	vertical-align middle
	margin-left -50px
	padding-left 60px
	background-color $roxo
	transition background-color .3s ease

.info-table
	display table
	width 100%
	height 100px

.info-cell
	display table-cell
	vertical-align middle
	padding-right 10px

	h3
		font-size 18px
		color $branco

	h4
		margin-top 5px
		font-size 14px
		font-weight 400
		color $branco
