/* Admin gallery controls */
.card-set
	&:hover
		.foto-select-btn
		.move-handler
			opacity 1
			visibility visible

.foto-select-btn
.move-handler
	@media(max-width: 991px)
		display none
	position absolute
	top 10px
	width 26px
	height 26px
	opacity 0
	visibility hidden
	display table
	transition all .3s ease

	i
		color #fff
		display table-cell
		vertical-align middle
		text-align center
		width 100%
		
.move-handler
	right 10px
	cursor move

.foto-select-btn
	left 10px
	background-color $cinza-0
	cursor pointer

	&:hover
		background-color $cinza-1

		ul
			visibility visible
			opacity 1
	i
		&::before
			content: "\e601";

	ul
		visibility hidden
		opacity 0
		position absolute
		left 100%
		top 1px
		transition all .3s ease
		min-width 125px

		li
			list-style none
			width (100/$ncols)%
			padding-bottom (100/$ncols)%
			color #fff
			display inline-block
			background-color $cinza-1
			text-align center	
			outline 1px solid $cinza-2		

			&.selected
				background-color $verde
			&.hover
				background-color $azul